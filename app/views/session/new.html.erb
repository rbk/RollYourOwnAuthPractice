<div id="login-form-wrap">
	
	<%= form_tag session_create_path do %>
		<div class="field">
			<%= label :email, 'Email' %>
			<%= text_field_tag :email %>
		</div>
		<div class="field">
			<%= label :password, 'Password' %>
			<%= password_field_tag :password %>
		</div>
		<div class="field">
			<%= submit_tag 'Log in' %>
		</div>
	<% end %>

</div>